{{#section 'head'}}
<style type="text/css">
    html, body {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
        background: black;
        background: linear-gradient(to bottom, #dcdcdc 0%, #00d2db 100%);
    }

    #main-canvas {
        width: 100%;
        height: 100%;
    }

    .filter {
        width: 100%;
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        background: #fe5757;
        animation: colorChange 30s ease-in-out infinite;
        animation-fill-mode: both;
        mix-blend-mode: overlay;
    }

    @keyframes colorChange {
        0%, 100% {
            opacity: 0;
        }
        50% {
            opacity: .7;
        }
    }
</style>
{{/section}}

<canvas id="canvas"></canvas>

<script src="js/starry-sky.js"></script>
<script>
    var CanvasStar = new CanvasStar;
    CanvasStar.init();
</script>
